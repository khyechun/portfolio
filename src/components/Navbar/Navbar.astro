<script>
  const navLinks = document.querySelectorAll('[data-section]');
  const bubble = document.getElementById('nav-bubble');

  function updateBubble(activeLink: Element | null) {
    if (!activeLink || !bubble) return;
    const link = activeLink as HTMLElement;
    bubble.style.width = `${link.offsetWidth + 16}px`;
    bubble.style.left = `${link.offsetLeft - 8}px`;
    bubble.style.opacity = '1';
  }

  function updateActiveLink() {
    const scrollY = window.scrollY + 100;
    let activeLink: Element | null = null;

    // First clear all active states
    navLinks.forEach((link) => link.classList.remove('active'));

    // Find the first section we're in (only check sections that have nav links)
    const navSections = ['experiences', 'projects', 'contact'];
    
    for (const sectionId of navSections) {
      const section = document.getElementById(sectionId);
      if (!section) continue;
      
      const sectionTop = section.offsetTop;
      const sectionHeight = section.offsetHeight;

      if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
        navLinks.forEach((link) => {
          if (link.getAttribute('data-section') === sectionId) {
            link.classList.add('active');
            activeLink = link;
          }
        });
        break;
      }
    }

    if (activeLink) {
      updateBubble(activeLink);
    } else if (bubble) {
      bubble.style.opacity = '0';
    }
  }

  window.addEventListener('scroll', updateActiveLink);
  window.addEventListener('resize', () => {
    const active = document.querySelector('[data-section].active');
    if (active) updateBubble(active);
  });
  updateActiveLink();
</script>
